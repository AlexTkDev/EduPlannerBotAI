[MASTER]
# Python code to analyze
ignore=venv,.venv

[MESSAGES CONTROL]
# Disable warnings about missing docstrings
disable=missing-module-docstring,
        missing-function-docstring,
        too-few-public-methods,
        missing-final-newline

[FORMAT]
# Max line length
max-line-length=100

[REPORTS]
# Disable score report
reports=no
